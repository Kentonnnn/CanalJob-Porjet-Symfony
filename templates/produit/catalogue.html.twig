{% extends "base.html.twig" %}

{% block title %}{{ parent()}} | Catalogue{% endblock %}

{% block h1 %}CATALOGUE DES PRODUITS{% endblock %}

{% block body %}

<div class="row">

    <div class="shadow col-md-3 p-2 ms-3 filtre">
        <h4>Filtres</h4>
        {{ form_start(formFilter) }}


            {{ form_row(formFilter.recherche) }}

            {{ form_row(formFilter.min) }}
            {{ form_row(formFilter.max) }}

            {{ form_row(formFilter.order) }}

            <input type="submit" value="Rechercher" class="btn btn-primary col-12 mt-2">

        {{ form_end(formFilter) }}
    </div>


    <div class="row justify-content-center col-md-9 produit">
        {% for produit in produits %}

        <div class="card" style="width: 18rem;">
            {% if produit.image %}
                <img src="{{ asset('images/upload/' ~ produit.image) }}" alt="" class="img150">
            {% else %}
                <img src="{{ asset('images/imageDefault.png')}}" alt="" class="img150">
            {% endif %}
            <div class="card-body">
                <h5 class="card-title">{{ produit.titre }}</h5>
                <p class="card-text">{{ produit.description }}</p>
                <a href="{{ path("fiche_produit", {"id" : produit.id}) }}">
                    <i class="text-warning" data-feather="eye"></i>
                </a> 
            </div>
        </div>
        {% endfor %}
    </div>

</div>

{% endblock %}